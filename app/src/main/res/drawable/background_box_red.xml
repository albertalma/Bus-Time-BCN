<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#ff0000" />

            <corners android:radius="5dp" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ff4c4c" />

            <stroke
                android:width="1dp"
                android:color="#ff0000" />

            <corners android:radius="5dp" />

            <padding
                android:bottom="2dp"
                android:left="5dp"
                android:right="5dp"
                android:top="2dp" />
        </shape>
    </item>

</layer-list>